{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "rootDir": "./src", 
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,                    
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
        
    },
    "files": [
        "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
        "src/**/**/**/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}